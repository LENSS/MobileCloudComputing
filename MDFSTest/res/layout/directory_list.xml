<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/bg_default" 
    xmlns:android="http://schemas.android.com/apk/res/android">
	
    <ListView android:id="@+id/directoryLV" android:layout_width="match_parent"  
        android:cacheColorHint="#00000000" android:layout_weight="1"
		android:layout_height="wrap_content" android:divider="@drawable/line_horizontal" android:footerDividersEnabled="false"/>
     
    <TextView android:id="@+id/emptyTV" android:layout_width="match_parent"
		android:layout_height="match_parent" android:visibility="gone"
		android:textStyle="bold" android:text="No Files Available" android:textColor="@color/white"
		android:textSize="20sp"	android:gravity="center" 
		android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/statusTV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:textColor="@color/bright_blue" android:paddingRight="5dp"
        android:textSize="15sp" android:gravity="center_vertical"/>
    
</LinearLayout>