<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/bg_default" 
    android:padding="6dp" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Processing"
        android:textSize="20sp" android:textColor="@color/white" 
        android:layout_gravity="center_horizontal" android:textStyle="bold"/>
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="5dp"
        android:src="@drawable/line_horizontal" />
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/createJobsBtn" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="Create Files" android:textSize="20sp"/>
        
        <Button
            android:id="@+id/processBtn" android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="Process Files" android:textSize="20sp"/>
        
        <!-- Button
            android:id="@+id/directoryBtn" android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="View Directory" android:textSize="20sp"/>
        
        <Button
            android:id="@+id/galleryBtn" android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="View Downloaded Images" android:textSize="20sp"/-->
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" 
        android:layout_weight="0.2"  >

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="top|left"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:maxLines = "200"
            android:text="Status"
            android:textColor="@color/bright_blue"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>