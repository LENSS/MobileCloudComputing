<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ipTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Forward Routing Table"
        android:textSize="18sp"
        android:layout_margin="6dp"
     />
	
    <EditText
        android:id="@+id/forwardET"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10" 
        android:inputType="none"
        android:editable="false" android:textSize="12sp" android:gravity="top">
        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Route Request Table"
        android:textSize="18sp"
        android:layout_margin="6dp"
     />
    
    <EditText
        android:id="@+id/reqET"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"  android:inputType="none"
        android:editable="false" android:textSize="12sp" android:gravity="top" />
    
	 <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Topology Table"
        android:textSize="18sp"
        android:layout_margin="6dp"
     />
    
    <EditText
        android:id="@+id/topologyET"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"  android:inputType="none"
        android:editable="false" android:textSize="12sp" android:gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" android:layout_marginBottom="6dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/refreshBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh" />

        <Button
            android:id="@+id/controlBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control" />

        <Button
            android:id="@+id/settingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting" />
         <Button
            android:id="@+id/fileTestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File" />
         <Button
            android:id="@+id/fileListBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List" />
        
    </LinearLayout>
    
</LinearLayout>